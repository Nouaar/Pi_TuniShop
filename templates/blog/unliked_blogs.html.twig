

{% block body %}

      
            <h1 class="mb-4 text-gradient">Unliked blog </h1>

            {% if unlikedBlogs is empty %}
                <p class="text-muted fs-5">Aucun blog sans likes.</p>
            {% else %}
               
                    {% for blog in unlikedBlogs %}
                        
                      
                                
                                    <div class="col-md-4 position-relative">
                                        <img src="{{ asset('/' ~ blog.image) }}" alt="{{ blog.titre }}" class="img-fluid rounded-start h-100" style="object-fit: cover;">
                                        <div class="gradient-overlay"></div>
                                    </div>
                                    <div class="col-md-8 d-flex flex-column justify-content-center p-4 bg-white">
                                        <h2 class="fw-semibold text-primary">{{ blog.titre }}</h2>
                                        <p class="text-muted mt-2">{{ blog.description }}</p>
                                        <p class="text-muted"><strong>Date de cr√©ation:</strong> {{ blog.dateCreation|date('d-m-Y') }}</p>
                                    </div>
                                
                            
                       
                    {% endfor %}
                
            {% endif %}
      
    
{% endblock %}

<style>
    .bg-light {
        background-color: #f8f9fa !important;
    }

    .hover-effect {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .hover-effect:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.2);
    }

    .gradient-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(to right, rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0));
        pointer-events: none;
    }

    .text-gradient {
        background: linear-gradient(90deg, #0d6efd, #0b5ed7);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .card {
        border-radius: 10px;
        overflow: hidden;
    }

    .img-fluid {
        border-radius: 10px;
    }

    .list-unstyled {
        margin-top: 20px;
    }

    .fw-semibold {
        font-weight: 600;
    }

    .text-primary {
        color: #0d6efd !important;
    }

    .text-muted {
        color: #6c757d !important;
    }

    .rounded-4 {
        border-radius: 1rem !important;
    }

    .shadow-lg {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>