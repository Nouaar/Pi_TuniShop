    <!-- Blog Loop -->
    {% for blog in blogs %}
        <div class="card">
            <!-- Blog Image -->
            {% if blog.image %}
                <div class="image-container">
                    <img src="{{ asset(blog.image) }}" alt="Blog Image">
                </div>
            {% endif %}

            <!-- Blog Content -->
            <div class="card-body">
                <h5 class="card-title">{{ blog.titre }}</h5>
                <p class="card-text">{{ blog.description }}</p>
                <p class="text-muted">
                    <small>🗓 Created on: {{ blog.dateCreation|date('F j, Y') }}</small> | 
                    <small>👍 <span id="likes-{{ blog.id }}">{{ blog.nbLikes }}</span> Likes</small>
                </p>

                <!-- Interaction Buttons -->
                <div class="interaction-buttons">
                    <span class="like-btn" data-id="{{ blog.id }}">
                        👍 Like
                    </span>
                   <a href="{{ path('blog_comment', {id: blog.id}) }}" class="comment-btn">
    💬 Comment
</a>
                </div>
 <!--methods are repurposed to serve backoffice, get rid of comments once productor access is allowed-->

                <!-- Modify and Delete Buttons (Icon Style) 
