<style>
    /* Global Styles */
    body {
        background-color: #f4f6f9;
        font-family: 'Arial', sans-serif;
        color: #333;
        margin-top: 30px;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    /* Header */
    h2 {
        font-size: 1.6rem;
        font-weight: bold;
        color: #333;
        text-align: center;
        margin-bottom: 30px;
    }

    /* Card Styles */
    .card {
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 25px;
        padding: 20px;
        position: relative;
    }

    .card-title {
        font-weight: bold;
        color: #2c3e50;
        font-size: 1.25rem;
        margin-bottom: 10px;
    }

    .card-text {
        color: #7f8c8d;
        margin-bottom: 15px;
    }

    /* Image Section */
    .image-container {
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #f1f1f1;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 15px;
    }

    .image-container img {
        max-width: 100%;
        max-height: 250px;
        object-fit: cover;
        border-radius: 8px;
    }

    /* Interaction Buttons */
    .interaction-buttons {
        display: flex;
        justify-content: space-around;
        margin-top: 20px;
        font-size: 0.9rem;
        color: #7f8c8d;
    }

    .interaction-buttons span {
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }

    /* Icon Buttons for Modify and Delete */
    .action-btn {
        background-color: transparent;
        border: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        cursor: pointer;
        color: #7f8c8d;
        transition: color 0.3s ease;
    }

    .action-btn:hover {
        color: #3498db;
    }

    .action-btn i {
        font-size: 1.5rem;
    }

    /* Flex containers for layout */
    .btn-container {
        display: flex;
        justify-content: flex-start;
        gap: 15px;
        margin-top: 15px;
    }

    .comment-section {
        margin-top: 20px;
    }

    .comment-header {
        font-size: 1.1rem;
        color: #333;
        margin-bottom: 10px;
    }
</style>


