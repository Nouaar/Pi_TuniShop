                   {# <form action="{{ path('blog_delete', { id: blog.id }) }}" method="POST" class="d-inline">#}
                        <button type="submit" class="action-btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this blog?');">
                            <i class="fas fa-trash-alt"></i> Delete
                        </button>
                    </form>
                   
                   {# <form action="{{ path('blog_update', { id: blog.id }) }}" method="POST" class="d-inline">#}
                        <button type="submit" class="action-btn btn-primary btn-sm">
                            <i class="fas fa-edit"></i> Modify
                        </button>
                    </form>
                </div>-->

                <hr>

                <!-- Comments Section -->
                <div class="comment-section">
                    <h6 class="comment-header">💬 Comments ({{ blog.commentssection|length }})</h6>
                    {% if blog.commentssection is not empty %}
                        <ul class="list-unstyled">
                            {% for commentaire in blog.commentssection %}
                                <li class="media mb-3">
                                    <div class="media-body">
                                        <p>{{ commentaire.text }}</p>

                                        <form action="{{ path('comment_delete_front', {'id': commentaire.id}) }}" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash-alt"></i> Delete Comment
                                    </button>
                                </form> 

                                        <p class="text-muted">
                                            <small>📅 Posted on: {{ commentaire.dateCreation|date('F j, Y') }}</small> 
                                            | <small>👍 <span id="comment-likes-{{ commentaire.id }}">{{ commentaire.nbLikes }}</span> Likes</small>
                                        </p>
                                        <span class="like-comment-btn" data-id="{{ commentaire.id }}">
                                            👍 Like Comment
                                        </span>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <p class="text-muted text-center">No comments yet.</p>
                    {% endif %}
                </div>
            </div>
        </div>
    {% else %}
        <p class="text-center text-muted">No blog posts available.</p>
    {% endfor %}
</div>

