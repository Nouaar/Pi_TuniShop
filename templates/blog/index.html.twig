{% block title %}Blog Feed{% endblock %}

{% block body %}
<style>
    /* Global Styles */
    body {
        background-color: #f4f6f9;
        font-family: 'Arial', sans-serif;
        color: #333;
        margin-top: 30px;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    /* Header */
    h2 {
        font-size: 1.6rem;
        font-weight: bold;
        color: #333;
        text-align: center;
        margin-bottom: 30px;
    }

    /* Card Styles */
    .card {
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 25px;
        padding: 20px;
        position: relative;
    }

    .card-title {
        font-weight: bold;
        color: #2c3e50;
        font-size: 1.25rem;
        margin-bottom: 10px;
    }

    .card-text {
        color: #7f8c8d;
        margin-bottom: 15px;
    }

    /* Image Section */
    .image-container {
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #f1f1f1;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 15px;
    }

    .image-container img {
        max-width: 100%;
        max-height: 250px;
        object-fit: cover;
        border-radius: 8px;
    }

    /* Interaction Buttons */
    .interaction-buttons {
        display: flex;
        justify-content: space-around;
        margin-top: 20px;
        font-size: 0.9rem;
        color: #7f8c8d;
    }

    .interaction-buttons span {
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }

    /* Icon Buttons for Modify and Delete */
    .action-btn {
        background-color: transparent;
        border: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        cursor: pointer;
        color: #7f8c8d;
        transition: color 0.3s ease;
    }

    .action-btn:hover {
        color: #3498db;
    }

    .action-btn i {
        font-size: 1.5rem;
    }

    /* Flex containers for layout */
    .btn-container {
        display: flex;
        justify-content: flex-start;
        gap: 15px;
        margin-top: 15px;
    }

    .comment-section {
        margin-top: 20px;
    }

    .comment-header {
        font-size: 1.1rem;
        color: #333;
        margin-bottom: 10px;
    }
</style>

<div class="container">
    <h2>üìñ Blog Posts</h2>

    <!-- Add Blog Button -->
    <div class="text-center mb-4">
        <a href="{{ path('blog_add') }}" class="btn btn-success">‚ûï Add Blog</a>
    </div>

    <!-- Blog Loop -->
    {% for blog in blogs %}
        <div class="card">
            <!-- Blog Image -->
            {% if blog.image %}
                <div class="image-container">
                    <img src="{{ asset(blog.image) }}" alt="Blog Image">
                </div>
            {% endif %}

            <!-- Blog Content -->
            <div class="card-body">
                <h5 class="card-title">{{ blog.titre }}</h5>
                <p class="card-text">{{ blog.description }}</p>
                <p class="text-muted">
                    <small>üóì Created on: {{ blog.dateCreation|date('F j, Y') }}</small> | 
                    <small>üëç <span id="likes-{{ blog.id }}">{{ blog.nbLikes }}</span> Likes</small>
                </p>

                <!-- Interaction Buttons -->
                <div class="interaction-buttons">
                    <span class="like-btn" data-id="{{ blog.id }}">
                        üëç Like
                    </span>
                   <a href="{{ path('blog_comment', {id: blog.id}) }}" class="comment-btn">
    üí¨ Comment
</a>
                </div>

                <!-- Modify and Delete Buttons (Icon Style) -->
                <div class="btn-container">
                    <!-- Delete Button -->
                    <form action="{{ path('blog_delete', { id: blog.id }) }}" method="POST" class="d-inline">
                        <button type="submit" class="action-btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this blog?');">
                            <i class="fas fa-trash-alt"></i> Delete
                        </button>
                    </form>
                    <!-- Modify Button -->
                    <form action="{{ path('blog_update', { id: blog.id }) }}" method="POST" class="d-inline">
                        <button type="submit" class="action-btn btn-primary btn-sm">
                            <i class="fas fa-edit"></i> Modify
                        </button>
                    </form>
                </div>

                <hr>

                <!-- Comments Section -->
                <div class="comment-section">
                    <h6 class="comment-header">üí¨ Comments ({{ blog.commentssection|length }})</h6>
                    {% if blog.commentssection is not empty %}
                        <ul class="list-unstyled">
                            {% for commentaire in blog.commentssection %}
                                <li class="media mb-3">
                                    <div class="media-body">
                                        <p>{{ commentaire.text }}</p>
                                        <p class="text-muted">
                                            <small>üìÖ Posted on: {{ commentaire.dateCreation|date('F j, Y') }}</small> 
                                            | <small>üëç <span id="comment-likes-{{ commentaire.id }}">{{ commentaire.nbLikes }}</span> Likes</small>
                                        </p>
                                        <span class="like-comment-btn" data-id="{{ commentaire.id }}">
                                            üëç Like Comment
                                        </span>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <p class="text-muted text-center">No comments yet.</p>
                    {% endif %}
                </div>
            </div>
        </div>
    {% else %}
        <p class="text-center text-muted">No blog posts available.</p>
    {% endfor %}
</div>

<script src="https://kit.fontawesome.com/a076d05399.js"></script>

<script>
    // Like Post
    document.querySelectorAll('.like-btn').forEach(button => {
        button.addEventListener('click', function () {
            let blogId = this.dataset.id;
            fetch(`/blog/${blogId}/like`, { 
                method: 'POST',
                headers: { 'X-Requested-With': 'XMLHttpRequest' }
            })
            .then(response => response.json())
            .then(data => {
                document.getElementById(`likes-${blogId}`).textContent = data.likes;
            });
        });
    });

    // Like Comment
    document.querySelectorAll('.like-comment-btn').forEach(button => {
        button.addEventListener('click', function () {
            let commentaireId = this.dataset.id;
            fetch(`/commentaire/${commentaireId}/like`, { 
                method: 'POST',
                headers: { 'X-Requested-With': 'XMLHttpRequest' }
            })
            .then(response => response.json())
            .then(data => {
                document.getElementById(`comment-likes-${commentaireId}`).textContent = data.likes;
            });
        });
    });
</script>

{% endblock %}
