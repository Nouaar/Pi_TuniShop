<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>{% block title %}Edit Checkout{% endblock %}</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <!-- Use asset() for local stylesheets -->
    <link href="{{ asset('vendors/typicons/typicons.css') }}" rel="stylesheet">
    <link href="{{ asset('vendors/css/vendor.bundle.base.css') }}" rel="stylesheet">
    <link href="{{ asset('css/vertical-layout-light/style.css') }}" rel="stylesheet">

    <!-- External CDN Stylesheets -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
</head>


<body>
    {% include 'partials/_navbar.html.twig' %}

    <div class="container">
        <h2 class="text-center mb-4">✏️ Update Checkout</h2>

        <!-- Form to update checkout -->
        <form action="{{ path('checkout_update', {'id': checkout.id, 'productId': productId}) }}" method="post">
            <!-- First Name -->
            <div class="form-group">
                <label for="firstName">First Name</label>
                <input type="text" class="form-control" id="firstName" name="firstName" value="{{ checkout.firstName }}" required />
            </div>

            <!-- Last Name -->
            <div class="form-group">
                <label for="lastName">Last Name</label>
                <input type="text" class="form-control" id="lastName" name="lastName" value="{{ checkout.secondName }}" required />
            </div>

            <!-- Email -->
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="email" value="{{ checkout.email }}" required />
            </div>

            <!-- Street Address -->
            <div class="form-group">
                <label for="street">Street Address</label>
                <input type="text" class="form-control" id="street" name="street" value="{{ checkout.street }}" required />
            </div>

            <!-- City -->
            <div class="form-group">
                <label for="city">City</label>
                <input type="text" class="form-control" id="city" name="city" value="{{ checkout.city }}" required />
            </div>

            <!-- Postal Code -->
            <div class="form-group">
                <label for="postalCode">Postal Code</label>
                <input type="text" class="form-control" id="postalCode" name="postalCode" value="{{ checkout.postalCode }}" required />
            </div>

            <!-- Country -->
            <div class="form-group">
                <label for="country">Country</label>
                <input type="text" class="form-control" id="country" name="country" value="{{ checkout.country }}" required />
            </div>

            <!-- Submit button to save changes -->
            <button class="btn btn-primary" type="submit">Save Changes</button>
        </form>

        <!-- Link to go back to the checkout list -->
        <a href="{{ path('list_of_checkouts_by_product', {'productId': productId}) }}" class="btn btn-secondary mt-3">Back to Checkout List</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
