<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Back-Office{% endblock %}</title>

    <!-- Bootstrap & Chart.js -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <style>
        body {
            background-color: #f8f9fa;
        }
        .sidebar {
            height: 100vh;
            background: #343a40;
            color: white;
            padding: 20px;
            position: fixed;
            width: 250px;
        }
        .sidebar a {
            color: white;
            text-decoration: none;
            padding: 10px;
            display: block;
            margin: 5px 0;
            border-radius: 5px;
        }
        .sidebar a:hover {
            background: #495057;
        }
        .content {
            margin-left: 260px;
            padding: 20px;
        }
        .card {
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .chart-container {
            position: relative;
            width: 10%; /* Use 100% for the chart to take the full width of the container */
            height: 40px; /* Set an appropriate fixed height for the chart */
        }

            .back-icon {
        margin-top: auto; /* Push to the bottom */
        padding: 12px; /* Padding around the icon and text */
        color: white; /* Text color */
        text-decoration: none; /* Remove underline */
        border-radius: 5px; /* Rounded corners */
        display: flex; /* Flex to align icon and text */
        align-items: center; /* Center vertically */
        background-color: #495057; /* Background color */
        transition: background 0.3s; /* Smooth transition for hover */
    }

    .back-icon:hover {
        background: #6c757d; /* Darker background on hover */
    }

    .back-icon i {
        margin-right: 8px; /* Space between icon and text */
    }
    </style>
</head>

<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <h3>üìä My Admin</h3>
        <a href="{{ path('admin_statistiques') }}">üìà Statistics</a>
        <a href="#">üì¶ Orders</a>
        <a href="#">‚ö†Ô∏è Complaints</a>
        <a href="#">üîß Settings</a>

      <!-- Back Icon link positioned at the bottom left corner -->
    <a href="{{ path('back') }}" class="back-icon">
        <i class="fas fa-arrow-left"></i> ‚¨ÖÔ∏è Back
    </a>
    </div>


    <!-- Main Content -->
    <div class="content">
        <div class="container">
            <h1 class="text-center mb-4">üìä Statistics of Orders and Complaints</h1>

            <div class="card p-4">
                <h4 class="text-center">Data Distribution</h4>
                <div class="d-flex justify-content-center">
                    <canvas id="statistiquesChart" width="400" height="400"></canvas>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            fetch("{{ path('admin_statistiques_data') }}")
                .then(response => response.json())
                .then(data => {
                    const ctx = document.getElementById('statistiquesChart').getContext('2d');
                    new Chart(ctx, {
                        type: 'pie',
                        data: {
                            labels: ['Purchased Products', 'Complaints'],
                            datasets: [{
                                data: [data.commandes, data.reclamations],
                                backgroundColor: ['#fcbfbf', '#fbe769'],
                                borderColor: ['#ffffff', '#ffffff'],
                                borderWidth: 2
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            aspectRatio: 1, // Force a 1:1 aspect ratio
                            plugins: {
                                legend: { position: 'bottom' }
                            }
                        }
                    });
                })
                .catch(error => console.error('Error loading data:', error));
        });
    </script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
