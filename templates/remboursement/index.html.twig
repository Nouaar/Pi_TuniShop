<body>

{% block body %}
<div class="container mt-5">
    <h2 class="text-center mb-4">üí∞ List of Remboursements</h2>
    
    <div class="table-responsive">
        <table class="table table-hover table-bordered text-center mx-auto" style="max-width: 90%; background-color: #fff;">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Montant</th>
                    <th>Mode de Remboursement</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for remboursement in remboursements %}
                    <tr>
                        <td>{{ remboursement.idRemboursement }}</td>
                        <td>{{ remboursement.montant }}</td>
                        <td>{{ remboursement.modeRemboursement }}</td>
                        <td>{{ remboursement.date ? remboursement.date|date('Y-m-d') : '' }}</td>
                        <td>
                            <a href="{{ path('app_remboursement_show', {'id': remboursement.idRemboursement}) }}" class="btn btn-info btn-sm">Show</a>
                            <a href="{{ path('app_remboursement_edit', {'id': remboursement.idRemboursement}) }}" class="btn btn-warning btn-sm">Edit</a>
                            {{ include('remboursement/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center text-danger">‚ùå No records found.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    
    <div class="text-center mt-3">
        <a href="{{ path('app_remboursement_new') }}" class="btn btn-success">‚ûï Create New</a>
    </div>
</div>
