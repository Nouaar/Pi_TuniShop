<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>{% block title %}Edit Product{% endblock %}</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="pi" name="keywords">
    <meta content="pi" name="description">

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Additional Stylesheets -->
    <link href="css/style.css" rel="stylesheet">

</head>

<body>


<!-- Logo and Shop Name -->
<div class="row align-items-center bg-light py-3 px-xl-5 d-none d-lg-flex">
    <div class="col-lg-4 d-flex align-items-center">
        <img class="img-fluid mr-3" src="{{ asset('img/logo.png') }}" alt="Logo" style="max-width: 50px;">
        <a href="{{ path('home') }}" class="text-decoration-none d-block">
            <span class="h1 text-uppercase text-dark bg-light px-2">Tuni</span>
            <span class="h1 text-uppercase text-light bg-primary px-2 ml-n1">Shop</span>
        </a>
    </div>
    <div class="col-lg-4 col-6 text-left">
        <form action="{{ path('search') }}">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search for products" name="query">
                <div class="input-group-append">
                    <span class="input-group-text bg-transparent text-primary">
                        <i class="fa fa-search"></i>
                    </span>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Navbar Start -->
<div class="container-fluid bg-dark mb-30">
    <div class="row px-xl-5">
        <div class="col-lg-9">
            <nav class="navbar navbar-expand-lg bg-dark navbar-dark py-3 py-lg-0 px-0">
                <a href="{{ path('home') }}" class="text-decoration-none d-block d-lg-none">
                    <span class="h1 text-uppercase text-dark bg-light px-2">Tuni</span>
                    <span class="h1 text-uppercase text-light bg-primary px-2 ml-n1">Shop</span>
                </a>
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                    <div class="navbar-nav mr-auto py-0">
                        <a href="{{ path('home') }}" class="nav-item nav-link">Home</a>
                        <a href="{{ path('shop') }}" class="nav-item nav-link">Shop</a>
                        <a href="{{ path('list_products') }}" class="nav-item nav-link {% if app.request.attributes.get('_route') == 'list_products' %}active{% endif %}">List Products</a>
                        <a href="{{ path('product_add') }}" class="nav-item nav-link">Add Product</a>
                        <a href="{{ path('contact') }}" class="nav-item nav-link">Contact</a>
                    </div>
                </div>
            </nav>
        </div>
    </div>
</div>
<!-- Navbar End -->

<!-- Main Content Block -->
{% block body %}
<div class="container">
    <h2 class="text-center mb-4">✏️ Edit Product</h2>

    <form action="{{ path('product_edit', {'id': product.id}) }}" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" id="title" name="title" value="{{ product.title }}" required />
        </div>
        <div class="form-group">
            <label for="price">Price (DT)</label>
            <input type="text" class="form-control" id="price" name="price" value="{{ product.price }}" required />
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control" id="description" name="description" required>{{ product.description }}</textarea>
        </div>
        <div class="form-group">
            <label for="categorie">Category</label>
            <input type="text" class="form-control" id="categorie" name="categorie" value="{{ product.categorie }}" required />
        </div>
        <div class="form-group">
            <label for="location">Location</label>
            <input type="text" class="form-control" id="location" name="location" value="{{ product.location }}" required />
        </div>
        <div class="form-group">
            <label for="quantity">Quantity</label>
            <input type="number" class="form-control" id="quantity" name="quantity" value="{{ product.quantity }}" required />
        </div>
        <div class="form-group">
            <label for="image">Image</label>
            <input type="file" class="form-control" id="image" name="image" />
            <p>Current image: <img src="{{ asset('uploads/images/' ~ product.image) }}" alt="{{ product.title }}" class="img-thumbnail" /></p>
        </div>
        <button class="btn btn-primary" type="submit">Save Changes</button>
    </form>

    <a href="{{ path('list_products') }}" class="back-btn">Back to Product List</a>
</div>
{% endblock %}

<!-- Back to Top -->
<a href="#" class="btn btn-primary back-to-top"><i class="fa fa-angle-double-up"></i></a>

<!-- JavaScript Libraries -->
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
