<!-- Add Product Form Start -->
<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <div class="col-lg-8 mb-5">
            <div class="contact-form bg-light p-30">
                <div id="success"></div>
                <form method="post" action="{{ path('product_add') }}" enctype="multipart/form-data">
                    <!-- CSRF Token -->
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('product_add') }}">

                    <div class="control-group">
                        <label for="title">Title</label>
                        <input type="text" class="form-control" id="title" name="title" required />
                    </div>
                    <div class="control-group">
                        <label for="price">Price DT</label>
                        <input type="number" class="form-control" id="price" name="price" required />
                    </div>
                    <div class="control-group">
                        <label for="description">Description</label>
                        <textarea class="form-control" id="description" name="description" required></textarea>
                    </div>
                    <div class="control-group">
                        <label for="categorie">Categorie</label>
                        <input type="text" class="form-control" id="categorie" name="categorie" required />
                    </div>
                    <div class="control-group">
                        <label for="location">Location</label>
                        <input type="text" class="form-control" id="location" name="location" required />
                    </div>
                    <div class="control-group">
                        <label for="image">Image</label>
                        <input type="file" class="form-control" id="image" name="image" required />
                    </div>
                    <div class="control-group">
                        <label for="quantity">Quantity</label>
                        <input type="number" class="form-control" id="quantity" name="quantity" required />
                    </div>
                    <div>
                        <button class="btn btn-primary py-2 px-4" type="submit">Add Product</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Add Product Form End -->
